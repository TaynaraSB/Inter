<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SalaoSelecionado">
    <ImageView
        android:id="@+id/imageSelector"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        />


        <TextView
            android:id="@+id/nomeSalao"
            android:layout_width="match_parent"
            android:layout_height="112dp"></TextView>

    <ListView
        android:id="@+id/listarNumero"
        android:textSize="39sp"
        android:layout_width="150dp"
        android:layout_height="137dp"
        android:layout_gravity="center"></ListView>

        <Button
            android:id="@+id/mais"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="+" />

        <Button
            android:id="@+id/menos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="subSenha"
            android:text="-" />

        <Button
            android:id="@+id/voltar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Voltar" />


</LinearLayout>