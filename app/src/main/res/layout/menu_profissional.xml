<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MenuPrincipalProfissional">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Menu Principal" />

    <Button
        android:id="@+id/btnMeusSaloes"
        android:onClick="meusSaloes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Meus Saloes" />

    <Button
        android:id="@+id/btnNovoSalao"
        android:onClick="novoSalao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Novo Salao" />

    <Button
        android:id="@+id/btnSair"
        android:onClick="sair"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sair" />

</LinearLayout>